<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimaryDark"
    tools:context="com.android.ilab.todoapp.SignUp">

    <Button
        android:text="SIGN UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:id="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:id="@+id/password2"
        android:text="Your_Password"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="\t\t\t\t\t welcome \n Sign Up here to continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeText"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorWhite"
        android:ems="10"
        android:id="@+id/email_id"
        android:hint="youremail@example.com"
        android:textColorHint="@color/colorWhite"
        android:layout_below="@+id/welcomeText"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_marginTop="82dp" />

    <TextView
        android:text="confirm your password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView3"
        android:layout_above="@+id/password2"
        android:layout_alignLeft="@+id/password1"
        android:layout_alignStart="@+id/password1"
        android:layout_marginBottom="17dp" />

    <TextView
        android:text="Enter your password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/email_id"
        android:layout_alignLeft="@+id/password1"
        android:layout_alignStart="@+id/password1"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:id="@+id/password1"
        android:text="Your Password"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/email_id"
        android:layout_alignStart="@+id/email_id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textColorHint="@color/colorWhite"
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:id="@+id/username"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/welcomeText"
        android:layout_alignRight="@+id/welcomeText"
        android:layout_alignEnd="@+id/welcomeText" />

</RelativeLayout>
